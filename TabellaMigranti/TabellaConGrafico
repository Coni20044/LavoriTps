<!DOCTYPE html>
<head>
    <title>File Reader e Tabella</title>
</head>
<body>
    
<html>

<canvas id="myCanvas" width="600" height="450" style="border:1px solid grey"></canvas>
<script>
const c = document.getElementById("myCanvas"); 
const ctx = c.getContext("2d");
ctx.fillStyle = "red";
ctx.fillRect(0, 0, c.width, c.height);
  
ctx.beginPath(); 

ctx.moveTo(100, 170);
ctx.lineTo(440, 170);
ctx.lineTo(120, 350);
ctx.lineTo(270, 70);
ctx.lineTo(440, 350);
ctx.lineTo(100, 170);
ctx.strokeStyle = "white";
ctx.lineWidth = 2;
ctx.stroke();
</script> 

</body>
</html>
    

<h1>Carica e visualizza il file di testo in forma tabellare</h1>

<input type="file" id="fileInput" />
<table id="table" border="1">
    <thead>
        <tr>
            <th>Colonna 1</th>
            <th>Colonna 2</th>
            
        </tr>
    </thead>
    <tbody></tbody>
</table>

<script>
document.getElementById('fileInput').addEventListener('change', function(event) {
    const file = event.target.files[0];
    if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
            const content = e.target.result;
            const lines = content.split('\n'); 
            

            const tableBody = document.querySelector('#table tbody');
            tableBody.innerHTML = '';
            

            lines.forEach(line => {
              
                const columns = line.split(' '); // Assumendo che i dati siano separati da uno spazio
                const row = document.createElement('tr');
                
                
                columns.forEach(col => {
                    const cell = document.createElement('td');
                    cell.textContent = col.trim(); // Rimuove spazi extra
                    row.appendChild(cell);
                });
                
               
                tableBody.appendChild(row);
            });
        };
        
     
        reader.readAsText(file);
    }
});
</script>

</body>
</html>
